    <script>
    $(window).scroll(function () {
    if ($(window).scrollTop() >= 100) {
        $('#mainNav').css('background', '#FFF');
        $('.nav-link').css({
            'display': 'block',
            'padding':' 0.5rem 1rem',
            'color': '#000',
            'position': 'relative',
            'display': 'flex',
            'flex': '1 1 auto',
            'margin': '0',
            'list- style - type': 'none'
        });

        document.getElementById('logo1').src = "../Content/assets/cai12.png";
      
    } else {
        $('#mainNav').css('background', 'transparent');
        $('.nav-link').css({
            'display': 'block',
            'padding': ' 0.5rem 1rem',
            'color': '#FFF',
            'position': 'relative',
            'display': 'flex',
            'flex': '1 1 auto',
            'margin': '0',
            'list- style - type': 'none'
        });
        document.getElementById('logo1').src = "../Content/assets/bai12.png";

    }
    });
   </script>

